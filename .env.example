# VPA Environment Configuration
# Copy to .env and fill in as needed

# API Keys (optional - for external integrations)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# LLM Configuration (optional)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Voice System Configuration
DEFAULT_VOICE_ENGINE=pyttsx3
VOICE_RATE=200
VOICE_VOLUME=0.8

# Performance Settings
MAX_MEMORY_MB=2048
STARTUP_TIMEOUT_SECONDS=10
EVENT_TIMEOUT_MS=10
TTS_TIMEOUT_SECONDS=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=.vpa/logs/vpa.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Data Directory
VPA_DATA_DIR=.vpa
VPA_CACHE_DIR=.vpa/cache
VPA_CONFIG_DIR=.vpa/config

# Network Configuration
HTTP_PORT=8080
HTTPS_PORT=8443
BIND_ADDRESS=127.0.0.1

# Security Settings
ENABLE_ENCRYPTION=true
JWT_SECRET_KEY=
SESSION_TIMEOUT_MINUTES=60

# Development Settings
DEBUG_MODE=false
ENABLE_HOT_RELOAD=false
SKIP_PERFORMANCE_CHECKS=false

# GUI Settings (if using GUI)
GUI_THEME=dark
WINDOW_WIDTH=800
WINDOW_HEIGHT=600
ENABLE_SYSTEM_TRAY=true

# Windows Integration
ENABLE_WIN32_INTEGRATION=true
ENABLE_COM_INTERFACES=true
STARTUP_WITH_WINDOWS=false
